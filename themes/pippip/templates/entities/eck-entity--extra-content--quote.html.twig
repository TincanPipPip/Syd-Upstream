{% extends "eck-entity--extra-content.html.twig" %}

{% block content %}

  {% include '@pippip/partials/atoms/content-toolkit-title.twig' %}

  <blockquote>
    {{ content.field_quote }}
  </blockquote>
  
  <div class="m-entity__quote-info">
    {% if content.field_rating|render %}
      {% include '@pippip/partials/atoms/rating.twig' with {
        content : {
          rating : content.field_rating.0
        }
      } %}
    {% endif %}

    {% if content.field_author %}
      <cite>
        <span class="name">
          {{ content.field_author }}
        </span>
        {% if content.field_quote_credit|render %}
          -
          {{ content.field_quote_credit}}
        {% endif %}
      </cite>
    {% endif %}
  </div>

{% endblock %}
