{% set imageSm = image_style(image, ['banner_image_sm']) %}
{% set imageMd = image_style(image, ['banner_image_md']) %}
{% set imageBig = image_style(image, ['banner_image']) %}

<picture>
	<source media="(max-width: 600px)" srcset="{{ imageSm.banner_image_sm }}">
	<source media="(max-width: 1000px)" srcset="{{ imageMd.banner_image_md }}">
	<img data-src="{{ imageBig.banner_image }}" alt="{{ alt }}" class="lazy">
</picture>
