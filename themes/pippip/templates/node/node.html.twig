{% if view_mode == "full" %}
	{% set nodeClass = 'o-full' %}
{% else %}
	{% set nodeClass = 'o-teaser o-teaser-' ~ view_mode|clean_class %}
{% endif %}

{%
	set classes = [
		'o-node',
		'o-' ~ node.bundle|clean_class,
		nodeClass
	]
%}

<article {{attributes.addClass(classes)}}>

	{% block content %}

		{% if view_mode == "full" %}
			{% include '@pippip/partials/organisms/default.twig' with {ct: node.bundle|clean_class} %}
		{% else %}
			{% include '@pippip/partials/organisms/teaser.twig' with {mode: view_mode|clean_class, ct: node.bundle|clean_class} %}
		{% endif %}

	{% endblock %}

</article>
